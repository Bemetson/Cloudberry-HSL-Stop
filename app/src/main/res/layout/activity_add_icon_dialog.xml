<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AddIconDialogActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/icon_0"
                android:layout_margin="12dp"
                android:background="@drawable/button_layout"
                android:onClick="selectedIcon"
                android:padding="8dp"
                android:src="@drawable/ic_location_city_black_24dp" />

            <ImageButton
                android:id="@+id/icon_1"
                android:layout_margin="12dp"
                android:background="@drawable/button_layout"
                android:onClick="selectedIcon"
                android:padding="8dp"
                android:src="@drawable/ic_mood_black_24dp" />

            <ImageButton
                android:id="@+id/icon_2"
                android:layout_margin="12dp"
                android:background="@drawable/button_layout"
                android:onClick="selectedIcon"
                android:padding="8dp"
                android:src="@drawable/ic_school_black_24dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/icon_3"
                android:layout_margin="12dp"
                android:background="@drawable/button_layout"
                android:onClick="selectedIcon"
                android:padding="8dp"
                android:src="@drawable/ic_star_border_black_24dp" />

            <ImageButton
                android:id="@+id/icon_4"
                android:layout_margin="12dp"
                android:background="@drawable/button_layout"
                android:onClick="selectedIcon"
                android:padding="8dp"
                android:src="@drawable/ic_looks_black_24dp" />

            <ImageButton
                android:id="@+id/icon_5"
                android:layout_margin="12dp"
                android:background="@drawable/button_layout"
                android:onClick="selectedIcon"
                android:padding="8dp"
                android:src="@drawable/ic_flag_black_24dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/icon_6"
                android:layout_column="0"
                android:layout_margin="12dp"
                android:background="@drawable/button_layout"
                android:onClick="selectedIcon"
                android:padding="8dp"
                android:src="@drawable/ic_pets_black_24dp" />

            <ImageButton
                android:id="@+id/icon_7"
                android:layout_column="1"
                android:layout_margin="12dp"
                android:background="@drawable/button_layout"
                android:onClick="selectedIcon"
                android:padding="8dp"
                android:src="@drawable/ic_home_black_24dp" />

        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/lightRed"
        android:onClick="kill"
        android:text="Back" />


</LinearLayout>